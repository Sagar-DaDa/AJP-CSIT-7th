   <servlet>
   		<servlet-name>TestServlet</servlet-name>
   		<servlet-class>com.backend.ServletDemo</servlet-class>
   </servlet>
   <servlet-mapping>
   		<servlet-name>TestServlet</servlet-name>
   		<url-pattern>/test</url-pattern>
   </servlet-mapping>
   
   <!-- Servlet Interface -->
   <servlet>
      <servlet-name>ServletInterface</servlet-name>
      <servlet-class>com.backend.ServletInterface</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>ServletInterface</servlet-name>
      <url-pattern>/servletinterface</url-pattern>
  </servlet-mapping>
  
  <!-- GenericServlet Class -->
  <servlet>
      <servlet-name>GenericServletDemo</servlet-name>
      <servlet-class>com.backend.GenericServletDemo</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>GenericServletDemo</servlet-name>
      <url-pattern>/genericservlet</url-pattern>
  </servlet-mapping>
  
  <!-- HttpServlet Class -->
  <servlet>
      <servlet-name>HttpServletDemoGet</servlet-name>
      <servlet-class>com.backend.HttpServletDemoGet</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>HttpServletDemoGet</servlet-name>
      <url-pattern>/httpServletget</url-pattern>
  </servlet-mapping>
  
  <!-- Reading form params Class -->
  <servlet>
      <servlet-name>ReadFormParams</servlet-name>
      <servlet-class>com.backend.ReadFormParams</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>ReadFormParams</servlet-name>
      <url-pattern>/readformparams</url-pattern>
  </servlet-mapping>
  
  <!-- Form Processing Get Method -->
  <servlet>
      <servlet-name>FormProcessingGet</servlet-name>
      <servlet-class>com.backend.FormProcessingGet</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>FormProcessingGet</servlet-name>
      <url-pattern>/form-processing-get</url-pattern>
  </servlet-mapping>
  
  <!-- Form Processing POST Method -->
  <servlet>
      <servlet-name>FormProcessingPost</servlet-name>
      <servlet-class>com.backend.FormProcessingPost</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>FormProcessingPost</servlet-name>
      <url-pattern>/form-processing-post</url-pattern>
  </servlet-mapping>
  
  <!-- Database Access With Servlets -->
  <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>com.database.Login</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>Login</servlet-name>
      <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- Set and Get Cookie -->
  <servlet>
      <servlet-name>SetCookieServlet</servlet-name>
      <servlet-class>com.backend.SetCookieServlet</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>SetCookieServlet</servlet-name>
      <url-pattern>/setCookie</url-pattern>
  </servlet-mapping>
  
  <servlet>
      <servlet-name>GetCookieServlet</servlet-name>
      <servlet-class>com.backend.GetCookieServlet</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>GetCookieServlet</servlet-name>
      <url-pattern>/getCookie</url-pattern>
  </servlet-mapping>
  
  <!-- Set, Get and Clear Session -->
  <servlet>
      <servlet-name>SetSessionServlet</servlet-name>
      <servlet-class>com.backend.SetSessionServlet</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>SetSessionServlet</servlet-name>
      <url-pattern>/setSession</url-pattern>
  </servlet-mapping>
  
  <servlet>
      <servlet-name>GetSessionServlet</servlet-name>
      <servlet-class>com.backend.GetSessionServlet</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>GetSessionServlet</servlet-name>
      <url-pattern>/getSession</url-pattern>
  </servlet-mapping>
  
  <servlet>
      <servlet-name>ClearSessionServlet</servlet-name>
      <servlet-class>com.backend.ClearSessionServlet</servlet-class>
  </servlet>
  <servlet-mapping> 
      <servlet-name>ClearSessionServlet</servlet-name>
      <url-pattern>/clearSession</url-pattern>
  </servlet-mapping>
</web-app>